@model IEnumerable<GestionEscolarMVC.Models.DetalleCalif>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Materia
            </th>
            <th>
                Alumno
            </th>
            <th>
                Parcial 1
            </th>
            <th>
                Parcial 2
            </th>
            <th>
                Parcial 3
            </th>
            <th>
                Promedio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Materium.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calif1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calif2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calif3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Promedio)
            </td>
            <td>
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id">Detalles</a> 
                    <a asp-action="Edit" class="btn btn-outline-dark" asp-route-id="@item.Id">Editar</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">X</a>
            </td>
        </tr>
}
    </tbody>
</table>
