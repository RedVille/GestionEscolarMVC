@model IEnumerable<GestionEscolarMVC.Models.DetalleMaestro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Materia
            </th>
            <th>
                Profesor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Materium.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maestro.Nombre)
            </td>
            <td>
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id">Detalles</a> 
                    <a asp-action="Edit" class="btn btn-outline-dark" asp-route-id="@item.Id">Editar</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">X</a>
            </td>
        </tr>
}
    </tbody>
</table>
